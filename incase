    function plusSlides(n) {
      // Get all the slideshow images
      var slides = document.getElementsByClassName("mySlides");
    
      // Get the index of the currently visible slide
      var currentIndex = -1;
      for (var i = 0; i < slides.length; i++) {
        if (slides[i].style.display === "block") {
          currentIndex = i;
          break;
        }
      }
    
      // If we couldn't find the current slide, exit the function
      if (currentIndex === -1) {
        return;
      }
    
      // Calculate the index of the previous slide
      var prevIndex = (currentIndex + slides.length - n) % slides.length;
    
      // Hide the current slide and show the previous slide
      slides[currentIndex].style.display = "none";
      slides[prevIndex].style.display = "block";
    }
    </script>




